# VibeCheck Environment Configuration
# Copy this file to .env and customize for your environment

# ==============================================================================
# Flask Configuration
# ==============================================================================
FLASK_ENV=production
FLASK_DEBUG=0

# ==============================================================================
# Data Paths (for local development)
# ==============================================================================
OUTPUT_DIR=./vibecheck_full_output
DB_PATH=./vibecheck_full_output/vibecheck.db
IMAGE_DIR=./vibecheck_full_output/images
FAISS_PATH=./vibecheck_full_output/vibecheck_index.faiss
META_PATH=./vibecheck_full_output/meta_ids.npy
VIBE_MAP_CSV=./vibecheck_full_output/vibe_map.csv

# ==============================================================================
# Performance Tuning
# ==============================================================================
# Number of threads for OpenMP/MKL operations
OMP_NUM_THREADS=1
MKL_NUM_THREADS=1

# ==============================================================================
# API Keys (if using external services)
# ==============================================================================
# SERPAPI_KEY=your_serpapi_key_here
# YELP_API_KEY=your_yelp_api_key_here
# OUTSCRAPER_API_KEY=your_outscraper_api_key_here

# ==============================================================================
# Docker-specific (override in docker-compose.yml)
# ==============================================================================
# OUTPUT_DIR=/app/data
# DB_PATH=/app/data/vibecheck.db
# IMAGE_DIR=/app/data/images
# FAISS_PATH=/app/data/vibecheck_index.faiss
# META_PATH=/app/data/meta_ids.npy
# VIBE_MAP_CSV=/app/data/vibe_map.csv
